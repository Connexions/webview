#!/usr/bin/env bash

# See https://github.com/openstax/setup-scripts for details on this file

if [[ $0 != "-bash" ]]; then
  cd "$(dirname "$0")/.." || exit 111
fi

# Write the settings.js file
gen-settings-from-env > src/scripts/settings.json

# If dist exists, copy the file there as well
if [ -f dist/scripts/settings.json ]; then
  cp src/scripts/settings.json dist/scripts/settings.json
fi
